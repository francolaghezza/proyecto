{% extends 'base.html.twig' %}

{% block title %}Reset{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <h1>Hola {{ usuario }} </h1>

    <p>
        Se ha solicitado una nueva de contraseña desde esta dirección, si no es usted, ignore este mensaje.
    </p>

    <p>
        <a href="{{ asset('http://www.rasprivate.es/nuevapass' ~ '?token=' ~ token) }}">Establece tu nueva contraseña</a>
    </p>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/accion.js') }}"></script>
{% endblock %}